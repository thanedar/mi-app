<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/label_transfer"
        style="@style/Theme.App.Fragment.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_label"
        android:text="@string/transfer_balance" />

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/transfer_details"
        style="@style/Theme.App.TextFolks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_transfer"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/margin_medium"
        android:text="@string/transfer_info"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/transfer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layout_below="@id/transfer_details"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/transfer_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_tiny"
            android:src="@drawable/ic_person_128"
            android:scaleType="fitXY"
        />
        <view
            android:id="@+id/transfer_msisdn"
            style="@style/Theme.App.Input.EditText"
            class="com.mitelcel.pack.ui.widget.EditTextFolk"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_tiny"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:hint="@string/transfer_msisdn"
            android:inputType="phone"
            android:maxLength="15" />
    </LinearLayout>
    <view
        android:id="@+id/transfer_amount"
        style="@style/Theme.App.Input.EditText"
        class="com.mitelcel.pack.ui.widget.EditTextFolk"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfer_list"
        android:layout_centerHorizontal="true"
        android:gravity="end"
        android:layout_margin="@dimen/margin_medium"
        android:hint="@string/amount"
        android:inputType="numberDecimal" />

    <com.mitelcel.pack.ui.widget.ButtonFolks
        android:id="@+id/transfer_confirm_btn"
        style="@style/Theme.App.ButtonFolks.Positive"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/ok" />

</RelativeLayout>
