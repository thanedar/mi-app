<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/label_confirm"
        style="@style/Theme.App.Fragment.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_label"
        android:text="@string/confirm" />

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/confirm_details"
        style="@style/Theme.App.Fragment.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_confirm"
        android:padding="30dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/lorem_ipsum"
        android:textSize="20sp" />

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/confirm_info"
        style="@style/Theme.App.Fragment.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_details"
        android:padding="20dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/lorem_ipsum"
        android:textSize="16sp" />

    <view
        android:id="@+id/confirm_password"
        style="@style/Theme.App.Input.EditText"
        class="com.mitelcel.pack.ui.widget.EditTextFolk"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_info"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_large"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <com.mitelcel.pack.ui.widget.ButtonFolks
        android:id="@+id/confirm_btn"
        style="@style/Theme.App.ButtonFolks.Positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/confirm" />

</RelativeLayout>
