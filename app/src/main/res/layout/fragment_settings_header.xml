<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mitelcel.pack.ui.fragment.FragSettings"
    android:padding="10dp">

    <TextView
        android:id="@+id/sett_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_settings"
        style="@style/Widget.GenericApp.Settings.Title.TextFolks"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin_medium"
        android:layout_marginBottom="20dp"/>


    <View
        android:id="@+id/separator"
        android:layout_below="@+id/sett_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skillsweet_base_color"/>

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:layout_marginBottom="5dp"
        style="@style/Widget.GenericApp.Settings.SubTitle.TextFolks"
        android:id="@+id/sett_sub_title"
        android:layout_above="@+id/separator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</merge>
