<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium">


    <TextView
        android:id="@+id/item_head_rewards_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        style="@style/Widget.GenericApp.RewardList.Title.TextFolks"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_head_rewards_title"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Balance: "
            android:textSize="20sp"
            android:id="@+id/item_head_rewards_coins_label" />

        <TextView
            android:id="@+id/item_head_rewards_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.GenericApp.RewardList.TextFolks"
            android:text="500" />

    </LinearLayout>

</RelativeLayout>



