<?xml version="1.0" encoding="utf-8"?>
<com.mitelcel.pack.ui.adapter.recycleview.rewards.RewardsItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium"
    android:id="@+id/item_channel"
    android:background="@drawable/selector_recycle_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_rewards_image"
        android:layout_toEndOf="@+id/item_rewards_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/item_rewards_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 coins bonanza"/>

        <TextView
            android:id="@+id/item_rewards_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="You've earn free coins!"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_rewards_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/act_bar_coin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</com.mitelcel.pack.ui.adapter.recycleview.rewards.RewardsItemLayout>



