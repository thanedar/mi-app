<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skillsweet_base_color"
    tools:context="com.mitelcel.pack.ui.fragment.rewardschannel.FragListReward">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Welcome to"
            android:textColor="@color/white"
            style="@style/Widget.GenericApp.TextFolks"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tutorial_appname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/yellow_dark"
            style="@style/Widget.GenericApp.Settings.Title.TextFolks"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="It\'s fun and easy to earn prizes"
            android:textColor="@color/white"
            style="@style/Widget.GenericApp.TextFolks"
            android:gravity="center"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <include layout="@layout/item_tutorial_progress"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <com.mitelcel.pack.ui.widget.ButtonFolks
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                android:id="@+id/welcome_btn_skip"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                style="@style/Widget.GenericApp.ButtonFolks"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"/>

            <com.mitelcel.pack.ui.widget.ButtonFolks
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:id="@+id/welcome_btn_next"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                style="@style/Widget.GenericApp.ButtonFolks.Tutorial.Next"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>