<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="@dimen/card_padding"
    tools:context="com.mitelcel.pack.ui.fragment.FragmentAccount">

    <com.mitelcel.pack.ui.widget.TextViewFolks
        android:id="@+id/account_id"
        style="@style/Theme.App.Account.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_label"
        android:text="@string/sample_user_msisdn" />

    <com.mitelcel.pack.ui.widget.ButtonFolks
        android:id="@+id/account_offer"
        style="@style/Theme.App.Account.Offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_id"
        android:layout_margin="10dp"
        android:text="@string/sample_offer" />

    <com.mitelcel.pack.ui.widget.ButtonFolks
        android:id="@+id/account_money"
        style="@style/Theme.App.ButtonFolks.Info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/account_offer"
        android:textSize="35sp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/account_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_money"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.mitelcel.pack.ui.widget.ButtonFolks
            android:id="@+id/account_minutes"
            style="@style/Theme.App.ButtonFolks.Info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.33" />

        <com.mitelcel.pack.ui.widget.ButtonFolks
            android:id="@+id/account_sms"
            style="@style/Theme.App.ButtonFolks.Info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.33" />

        <com.mitelcel.pack.ui.widget.ButtonFolks
            android:id="@+id/account_data"
            style="@style/Theme.App.ButtonFolks.Info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.33" />
    </LinearLayout>

</RelativeLayout>
