<resources>

    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Only needed for pre-L -->
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/Theme.App.EditText</item>
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_900</item>
        <item name="colorAccent">@color/material_blue_a200</item>
    </style>

    <!-- NO actionbar style -->

    <style name="Theme.App.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_900</item>
        <item name="colorAccent">@color/material_blue_a200</item>
        <!-- Only needed for pre-L -->
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/Theme.App.EditText</item>
    </style>

    <style name="Theme.App.Dialog.Popup" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/dark_transparency_popup</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- END NO actionbar style -->

    <style name="Theme.App.NavigationDrawer.TextView" parent="Theme.App" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.App.Fragment.Title.TextView" parent="Theme.App" >
        <item name="type_face">@string/vagroundedstd_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/soft_grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.App.Account.Title" parent="Theme.App">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="Theme.App.Account.Offer" parent="Theme.App">
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_thin</item>
        <item name="android:background">@drawable/shape_account_offer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">20dp</item>
        <item name="android:paddingTop">50dp</item>
    </style>

    <style name="Theme.App.ButtonFolks" parent="Theme.App">
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_login_register_btn</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.App.ButtonFolks.Info" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_light</item>
        <item name="android:background">@drawable/shape_account_info</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Theme.App.Offers.ButtonFolks" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_list_offer_btn_accept</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.App.ButtonFolks.Positive" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_button_folks_positive</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="Theme.App.ButtonFolks.Negative" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_button_folks_negative</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.App.ButtonFolks.Recharge" parent="Theme.App.ButtonFolks.Positive"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_button_folks_positive</item>
        <item name="android:textSize">25sp</item>
        <item name="android:width">144dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="Theme.App.ButtonFolks.Disable" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_button_folks_disable</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.App.ButtonFolks.Tutorial.Next" parent="Theme.App">
        <item name="android:textColor">@color/red</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_list_tutorial_next_btn</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="Theme.App.ButtonFolks.Tutorial.Skip" parent="Theme.App">
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:background">@drawable/shape_list_tutorial_skip_btn</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.App.TextFolks" parent="Theme.App"  >
        <item name="android:textColor">@color/white</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.App.TextFolks.Dark" parent="Theme.App"  >
        <item name="android:textColor">@color/black</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.App.Dialog.Popup.Layout" parent="Theme.App"  >
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.App.Dialog.Popup.Title" parent="Theme.App" >
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/shape_login_register_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="type_face">@string/vagroundedstd_bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.App.Input.EditText" parent="Theme.App">
        <item name="type_face">@string/vagroundedstd_black</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/soft_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey_more</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="Theme.App.Input.RadioButton" parent="Theme.App">
        <item name="type_face">@string/vagroundedstd_black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.Dashboard.Grid" parent="Widget">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:columnWidth">200dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <style name="Widget.Dashboard.Card" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

</resources>
