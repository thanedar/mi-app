<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameContainer">

    <com.tatssense.core.retargeting.starter.controller.component.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slide_banner"
        android:background="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:tag="Bottom1"
            android:background="#00000000"
            android:id="@+id/bottom_wrapper"
            android:layout_width="160dp"
            android:layout_height="match_parent">
            <View
                android:id="@+id/archive"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/slider_text_container"
            android:padding="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/slider_text_content"
                android:tag="Hover"
                android:text="Test banner Test banner Test banner Test banner Test banner Test banner >"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </com.tatssense.core.retargeting.starter.controller.component.SwipeLayout>


</FrameLayout>